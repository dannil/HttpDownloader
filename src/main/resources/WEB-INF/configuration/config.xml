<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <app>
    <paths>
      <configuration>WEB-INF/configuration/app/</configuration>
      <properties>WEB-INF/configuration/app/properties/</properties>

      <!-- This is a special path used by ResourceBundle for fetching a language, 
        and can therefore not contain a trailing slash -->
      <language>WEB-INF/configuration/app/properties/language</language>

      <!-- Where we shall save our downloads -->
      <downloads>downloads</downloads>

      <views>
        <view>WEB-INF/view</view>

        <downloads>WEB-INF/view/downloads</downloads>
      </views>
    </paths>

    <urls>
      <index>/index</index>

      <downloads>/downloads</downloads>
      <downloadsadd>/downloads/add</downloadsadd>

      <login>/login</login>
      <register>/register</register>
    </urls>

    <defaults>

      <!-- The IETF BCP 47-tag of the default language to display (i.e. en-US). 
        If left empty, the application will default to English (en-US) -->
      <language></language>

    </defaults>
  </app>

  <project>
    <paths>
      <configuration>WEB-INF/configuration/</configuration>
    </paths>
  </project>

</configuration>